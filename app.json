{
  "expo": {
    "name": "TwilingLocation",
    "slug": "locationtwilingru",
    "description": "Приложение для мониторинга личного автомобиля",
    "version": "1.0.0",
    "platform": ["android"],
    "extra": {},
    "orientation": ["portrait", "landscape"],
    "icon": "./assets/images/cargpsalfa.png",
    "scheme": "twiling-location-app-scheme",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "minSdkVersion": 29,
      "targetSdkVersion": 29,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/cargpsalfa.png",
        "backgroundColor": "#d7d5d5"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "ru.twiling.location"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/cargpsalfa.png",
          "dark": {
            "image": "./assets/images/cargpsblack.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#30b024",
          "android": {
            "scaleType": "CENTER_CROP",
            "adaptiveIcon": false,
            "backgroundColor": "#000000",
            "image": "./assets/images/cargpsalfa.png"
          }
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "${process.env.EXPO_PUBLIC_RN_MAPBOX_MAPS_DOWNLOAD_TOKEN}"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 29,
            "usesCleartextTraffic": true
          }
        }
      ],
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Необходимо разрешение для выбора фото профиля"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/cargpsalfa.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ]
    ],
    "packagerOpts": {
      "config": "metro.config.cjs"
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
